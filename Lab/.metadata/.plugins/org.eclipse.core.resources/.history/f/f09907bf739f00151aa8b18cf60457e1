var detail = function(){
	var detailWin = Ti.UI.createWindow({
		backgroundColor: "#fff"
		//layout: "vertical",
		//modal: true
	});
	var detailImage = Ti.UI.createImageView({
		width: 100,
		height: 100,
		top: 40,
		image: this.leftImage
	});
	var detailLabel = Ti.UI.createLabel({
		text: this.desc,
		top: 160
		left: 15,
		right: 15
	});
	var detailBox = Ti.UI.createView({
	backgroundColor: "#50ffffff",
	left: 20,
	right: 20,
	top: 360,
	bottom: 110,
});
	detailWin.add(detailImage, detailLabel);
	detailBox.add(detailLabel);
	detailWin.addEventListener("click", function(){
		detailWin.close();
	});
	detailWin.open();
};

exports.detail = detail;