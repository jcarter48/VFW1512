Ti.UI.setBackgroundColor("eee");
var win = Ti.UI.createWindow({
	backgroundColor: "#fff",
	top: 20
});

//images
var galleryFolder = Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory,"images");
var gallery = galleryFolder.getDirectoryListing();

for(var i=0; i<gallery.length; i++){
	console.log("images" + gallery[i]);
	
	var images = Ti.UI.createImageView({
		image: "images/" + gallery[i],
		width:300,
		height: 100,
		top: 130*i
	});
	win.add(images);
}

win.open();
