var data = require("data");
var detail = require("detail");

var win = Ti.UI.createWindow({
	backgroundColor: "#fff"
});

var table = Ti.UI.createTableView({
	top: 20,
	headerTitle: "Top 20 Favorite Champions",
});

var rowCollection = [];

for(var i=0; i<data.length; i++){
	var row = Ti.UI.createTableViewRow({
		title: data[i].title,
		height: 50,
		bg: list[i].color,
		leftImage: "images/" + data[i].image,
		desc: data[i].desc,
		//hasChild: true,
		//hasCheck: true,
	});
	if(list[i].status === "hasChild"){
		row.hasChild = true;
	}else if(list[i].status === "hasDetail"){
		row.hasDetail = true;
	}
	row.addEventListener("click", getDetail);
	rowCollection.push(row);
};

table.setData(rowCollection);

win.add(table);
win.open();
