var data = require("data");
var detail = require("detail");

var win = Ti.UI.createWindow({
	backgroundColor: "#fff"
});

var nav =Ti.UI.iOS.createNavigationWindow({
	window: win
});

var table = Ti.UI.createTableView({
	top: 20,
	headerTitle: "Favorite Champions",
});

//var categories = ["Top 10 Favorites", "Previous Top 10 Favorites"];

// var section1 = Ti.UI.createTableViewSection({
	// //headerTitle: categories[0]
// });
// 
// var section2 = Ti.UI.createTableViewSection({
	// //headerTitle: categories[1]
// });


var sectionCollection = [];

for(n in data.data){
	var section = Ti.UI.createTableViewSection({
		headerTitle: data.data.n
	});
	for(var i = 0; i<data.data[n].length; i++){
		var row = Ti.UI.createTableViewRow({
			//object[currentsection][currentRow].property
			title: data.data[n][i].title,
			//backgroundColor: people[n][i].color
		});
		section.add(row);
	}
	sectionCollection.push(section);
}


