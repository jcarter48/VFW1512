var win = Ti.UI.createWindow({
	backgroundColor: "#fff"
});

var table = Ti.UI.createTableView({
	top: 20,
	headerTitle: "Groceries"
});

var shoppingList = [
	"Potato Chips", 
	"Cheese", 
	"Tomatoes",  
	"Coca Cola",
	"Pineapples",
	"Coconut Rum"
	];

var shoppingListColors = [
	"blue", 
	"orange", 
	"pink", 
	"red", 
	"yellow",
	"brown"
	];

var list = [
	{title: "Potato Chips", color: "blue", photo: "chips.png"},
	{title: "Cheese", color: "orange", photo: "cheese.png"},
	{title: "Tomatoes", color: "pink", photo: "tomatoes.png"},
	{title: "Coca Cola", color: "red", photo: "coca cola.png"},
	{title: "Pineapples", color: "yellow", photo: "pineapple.png"},
	{title: "Coconut Rum", color: "brown", photo: "coconut rum.png"},
];

var rowCollection = [];

for(var i=0; i<shoppingList.length; i++){
	var row = Ti.UI.createTableViewRow({
	title: shoppingList[i],
	height: 30,
	backgroundColor: shoppingListColors[i],
	//color: "#fff"
	});
	rowCollection.push(row);
};

table.setData(rowCollection);

win.add(table);
win.open();
