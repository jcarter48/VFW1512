var win = Ti.UI.createWindow({
	backgroundColor: "#fff",
	top: 20,
	layout: "vertical"
});

for(var i=0; i<5; i++){
	
	var theView = Ti.UI.createView({
		width:100,
		height: 100,
		backgroundColor: "#C65E53",
		borderColor: "#000",
		top: i*110,
		horizontalWrap: 10
	});
	win.add(theView);
}

win.open();
