var win = Ti.UI.createWindow({
	backgroundColor: "#605BC8"
});

var buttonGreen = Ti.UI.createView({
	backgroundColor: "#green",
	width: 150,
	height: 100,
	borderColor: "#fff",
	borderWidth: 4,
	borderRadius: 10,
	top: 60 
});

var labelGreen = Ti.UI.createLabel({
	text: "Lime",
	//color: "#fff",
	font: {fontSize: 24, 
		//fontWeight: "bold", 
		fontFamily:"Futura-CondensedExtraBold"},
		//top: 10
});

var buttonYellow = Ti.UI.createView({
	backgroundColor: "#yellow",
	width: 150,
	height: 100,
	borderColor: "#fff",
	borderWidth: 4,
	borderRadius: 10,
	top: 220
});

var labelYellow = Ti.UI.createLabel({
	text: "Bannana",
	//color: "#fff",
	font: {fontSize: 24, 
		//fontWeight: "bold", 
		fontFamily:"Futura-CondensedExtraBold"},
		//top: 10
});

var buttonRed = Ti.UI.createView({
	backgroundColor: "#red",
	width: 150,
	height: 100,
	borderColor: "#fff",
	borderWidth: 4,
	borderRadius: 10,
	top: 380
});

var labelRed = Ti.UI.createLabel({
	text: "Cherry",
	//color: "#fff",
	font: {fontSize: 24, 
		//fontWeight: "bold", 
		fontFamily:"Futura-CondensedExtraBold"},
		//top: 10
});

buttonGreen.add(labelGreen);
buttonYellow.add(labelYellow);
buttonRed.add(labelRed);
win.add(buttonGreen, buttonYellow, buttonRed);

var alertMe = function(){
	//if(this.backgroundColor === "green"){
		//alert("The color is green");
	//}else{
		//alert("The color is yellow");
	//}
	alert("The color is " + this.backgroundColor + " and the fruit is" + this.children);
};

buttonGreen.addEventListener("click", alertMe);
buttonYellow.addEventListener("click", alertMe);
buttonRed.addEventListener("click", alertMe);

win.open();
