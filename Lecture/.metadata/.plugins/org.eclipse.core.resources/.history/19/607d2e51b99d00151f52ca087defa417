var win = Ti.UI.createWindow({
	backgroundColor: "#fff"
});
var button = Ti.UI.createView({
	backgroundColor: "blue",
	borderRadius: 20,
	width: 100,
	height: 100
});

var openSwipe = function(){
var swipeView = Ti.UI.createScrollableView({
	showPagingControl: true
	});
	win.add(swipeView);
};

win.add(button);
button.addEventListener("click", openSwipe);

win.open();