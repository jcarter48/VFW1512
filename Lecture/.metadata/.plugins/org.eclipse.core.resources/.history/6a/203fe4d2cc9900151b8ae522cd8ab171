var win = Ti.UI.createWindow({
	backgroundColor: "#605BC8"
});

var buttonGreen = Ti.UI.createView({
	backgroundColor: "#5BC86B",
	width: 150,
	height: 100,
	borderColor: "#fff",
	borderWidth: 4,
	borderRadius: 20,
	top: 60 
});

var labelGreen = Ti.UI.createLabel({
	text: "Button 1",
	color: "#fff",
	font: {fontSize: 24, fontWeight: "bold", fontFamily:"Superclarendon-Bold"},
	top: 50
});

win.add(buttonGreen, labelGreen);

win.open();
