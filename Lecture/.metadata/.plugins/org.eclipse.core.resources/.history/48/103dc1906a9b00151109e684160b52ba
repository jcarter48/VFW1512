Ti.UI.setBackgroundColor("eee");
var win = Ti.UI.createWindow({
	backgroundColor: "#fff",
	top: 20,
	layout: "horizontal"
});

for(var i=0; i<50; i++){
	
	var theView = Ti.UI.createView({
		width: 100,
		height: 100,
		backgroundColor: "#C65E53",
		borderColor: "#000",
		bottom: 10,
		right: 10,
		left: 10
	});
	var label = Ti.UI.createLabel({
		text: "#",
		color: "#fff"
	});
	view.add(label);
	win.add(theView);
}

win.open();
