var win = Ti.UI.createWindow();

var outputLabel = Ti.UI.createLabel({
	color: "#fff",
	text: "Choose a color",
	top: 80,
	font: {fontSize: 30, fontWeight: "bold"},
	textAlign: "center"
});

var view1 = Ti.UI.createView({ backgroundColor:'#66C247', name: "Lime", type: "AmericanTypewriter-Bold" });
var view2 = Ti.UI.createView({ backgroundColor:'#55424A9', name: "Plum", type: "Baskerville-BoldItalic"});
var view3 = Ti.UI.createView({ backgroundColor:'#BD2E2E', name: "Cherry", type: "GurmukhiMN-Bold" });

var swipeView = Ti.UI.createScrollableView({
  views:[view1,view2,view3],
  showPagingControl:true,
  currentPage: 2,
  top: 200
});

swipeView.addEventListener("scrollend", function(){
	console.log(this.currentPage);
	console.log(this.views[this.currentPage].backgroundColor);
	outputLabel.text = this.views[this.currentPage].name + "\n" + this.views[this.currentPage].backgroundColor;
	outputLabel.color = this.views[this.currentPage].backgroundColor;
	outputLabel.font = {fontSize: 40, fontFamily: this.views[this.currentPage].type};
	//outputLabel.setFont({fontSize: 30, fontFamily: this.views[this.currentPage].type});
});

win.add(outputLabel);
win.add(swipeView);
win.open();